<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@color/green"
        android:minHeight="10dp"
        android:orientation="vertical" >
    </LinearLayout>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout1"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="30dp"
        android:text="@string/receiver_mobile_send_activity"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/Error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_alignRight="@+id/textView1"
        android:layout_alignTop="@dimen/padding_medium"
        android:layout_alignWithParentIfMissing="false"
        android:layout_below="@id/linearLayout1"
        android:layout_centerVertical="true"
        android:layout_marginTop="@dimen/padding_medium"
        android:text="@string/EmptyString"
        android:textColor="@color/red" />

    <!--
        <TextView
        android:id="@+id/Error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_alignRight="@+id/textView1"
        android:layout_alignTop="@dimen/padding_medium"
        android:layout_alignWithParentIfMissing="false"
        android:layout_below="@id/linearLayout1"
        android:layout_centerVertical="true"
        android:layout_marginTop="@dimen/padding_medium"
        android:text="@string/EmptyString"
        android:textColor="@color/red" />
    -->

    <LinearLayout
        android:id="@+id/bottomlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="@color/green"
        android:minHeight="10dp"
        android:orientation="vertical" >
    </LinearLayout>

    <!--
        <Button
        android:id="@+id/CancelTransaction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/bottomlayout"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:background="@color/green"
        android:onClick="rediretHomeActivity"
        android:paddingLeft="31dp"
        android:paddingRight="31dp"
        android:text="@string/homeButton" />
    -->

    <EditText
        android:id="@+id/receiverMobile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:inputType="numberSigned"
        android:maxLength="10"
        android:padding="@dimen/padding_small" />

    <TextView
        android:id="@+id/ChooseOption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/receiverMobile"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
        android:text="@string/ORText" />

    <TextView
        android:id="@+id/receiverEmailText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ChooseOption"
        android:layout_centerHorizontal="true"
        android:text="@string/receiver_email_send_activity"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/receiverEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/receiverEmailText"
        android:ems="15"
        android:inputType="textEmailAddress"
        android:padding="@dimen/padding_small" />

    <!--
         <TextView
        android:id="@+id/TextView01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_below="@+id/receiverEmail"
        android:layout_marginTop="20dp"
        android:text="@string/select_file_send_activity"
        android:textAppearance="?android:attr/textAppearanceLarge" />
    -->

    <RadioGroup
        android:id="@+id/selectFileGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/receiverMobile"
        android:layout_alignTop="@+id/receiverEmail" >

        <RadioButton
            android:id="@+id/radio0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:checked="true"
            android:tag="ScanAndSend"
            android:text="@string/recently_scanned_file_send_activity" />

        <RadioButton
            android:id="@+id/radio2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tag="LocalFile"
            android:text="@string/local_file_send_activity" />
    </RadioGroup>

    <Button
        android:id="@+id/sendFileButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/selectFileGroup"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:background="@color/green"
        android:onClick="sendFile"
        android:paddingLeft="31dp"
        android:paddingRight="31dp"
        android:text="@string/send_button_send_activity"
        android:textAllCaps="true" />

</RelativeLayout>