<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center|center_vertical"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/TrnsResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center|center_horizontal"
        android:layout_margin="@dimen/padding_large"
        android:textColor="@color/white"
        android:textSize="24dp" />

     <TextView
         android:id="@+id/TrnsCost"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_gravity="center"
         android:layout_margin="@dimen/padding_large"
         android:text="@string/costDialogTrnsCostMsg"
         android:textColor="@color/white"
         android:textSize="24dp" />
     
      <TextView
          android:id="@+id/TrnsAmount"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:layout_margin="@dimen/padding_large"
          android:text="@string/costDialogAmount"
          android:textColor="@color/white"
          android:textSize="24dp" />
      
       <TextView
           android:id="@+id/TrnsBalance"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_gravity="center"
           android:layout_margin="@dimen/padding_large"
           android:text="@string/costDialogBalanceMsg"
           android:textColor="@color/white"
           android:textSize="24dp" />

       <Button
           android:id="@+id/TrnsButton"
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:layout_gravity="center"
           android:background="@drawable/button"
           android:padding="@dimen/padding_medium"
           android:text="@string/resultDialogNeturalBtn"
           android:textColor="@color/white"
           android:textSize="@dimen/mediumText" />

</LinearLayout>